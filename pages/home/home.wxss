/* pages/home/home.wxss */
@import '../../iconfont/iconfont.wxss';
.nav{
  height: 45px;
  background-color: #3bb0ff;
  color: #fff;
  text-align: center;
  line-height: 45px;  
  position: relative;
}
.icongengduo{
  position: absolute;
  left:15px;
  font-size: 21px;
}
.iconmui-icon-add{
  position: absolute;
  right: 12px;
  font-size: 23px;
}
.list_box{
  background-color: #f2f2f2;
  height:calc(100vh - 45px);
}
.list{
  display: block;
  /* height: 140px; */
  background-color: #fff;
  margin: 12px 15px;
  border-radius: 15px;
}
.list_header{
  height: 35px;
  background-color: #fafafa;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  color:#378CF7;
  padding:0 10px;
}
.list_header>icon{
  font-size: 23px;
  line-height: 37px;  
  margin-right: 8px;
}
.list_center{

}
/* 个人信息/头像/昵称 */
.list_center>.personal{
  padding:5px 30px 0 10px;
}
.list_center>.personal>image{
  width:35px;
  height:35px;
  border-radius:50%;
  margin-right: 5px;
}
.list_center>.personal>text{
  vertical-align: top;
  display: inline-block;
  line-height: 36px;
  color: #333;  
}
.list_center>.personal>text:last-child{
  font-size: 10px;
  float: right;
  font-weight: bold;
}
.list_center>.information{
  padding:0 10px 10px 19px;
}
.list_center>.information>view{
  display: inline-block;
  margin:0 8px 6px 0;
}
.list_center>.information>view>icon{
  margin-right:10px;
  font-size: 20px;
}
.list_center>.information>view>text{
  font-size: 14px;
  width: 120px;
  overflow: hidden;
  display: inline-block;
  height: 18px;  
  color:#378CF7;
}